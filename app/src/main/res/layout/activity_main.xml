<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:text="Calculadora"
        app:layout_constraintBottom_toTopOf="@+id/Text_Respuesta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/Text_Respuesta"
        android:layout_width="275dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/Text_Calcular"
        android:layout_width="275dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="147dp" />

    <Button
        android:id="@+id/Btn_Numero1"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/btn_Numero4"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/btn_Numero0"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Numero1"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/btn_Numero2"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/Btn_Numero1"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/btn_Numero3"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero2"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/btn_Numero4"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/btn_Numero7"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/btn_Numero5"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero4"
        tools:layout_editor_absoluteY="275dp" />

    <Button
        android:id="@+id/btn_Numero6"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero5"
        tools:layout_editor_absoluteY="275dp" />

    <Button
        android:id="@+id/btn_Numero7"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:text="7"
        app:iconTint="#EDE8E8"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/btn_Numero8"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero7"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/btn_Numero9"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero8"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/btn_Sumar"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero9"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/btn_Restar"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero6"
        tools:layout_editor_absoluteY="275dp" />

    <Button
        android:id="@+id/btn_Multiplicar"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btn_Numero3"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/btn_Dividir"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:text="/"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/btn_Resultado"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:text="="
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/btn_Borrar"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="Borrar"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="413dp" />

</androidx.constraintlayout.widget.ConstraintLayout>